@model PortfolioViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form asp-controller="Portfolio" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label>Type</label>
            <select class="form-control" asp-for="Type">
                <option value="truck47">Truck 47</option>
            </select>
        </div>
        <div class="form-group">
            <label>Details</label>
            <input class="form-control" asp-for="Details" />
        </div>
        <div class="form-group">
            <label>Language</label>
            <input class="form-control" asp-for="Language" />
        </div>
        <div class="form-group">
            <label>Link</label>
            <input class="form-control" asp-for="Link" />
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="btn btn-primary" asp-for="CurrentImage" type="hidden" />
            <input class="btn btn-info" asp-for="PortfolioPhoto" />
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit" />
    </form>
</div>
